{
	"plugins": {
		"local": {
			"browsers": ["chrome", "firefox"],
			"browserOptions": {
				"chrome": ["headless", "disable-gpu", "no-sandbox"],
				"firefox": ["--headless"]
			}
		},
		"istanbul": {
			"dir": "./coverage",
			"reporters": ["text-summary", "lcov"],
			"include": [
				"cosmoz-omnitable.html",
				"cosmoz-omnitable.js",
				"cosmoz-omnitable-*.html",
				"cosmoz-omnitable-*.js"
			],
			"exclude": []
		}
	}
}
