{
	"plugins": {
		"local": {
			"browsers": ["chrome", "firefox"],
			"browserOptions": {
				"chrome": ["headless", "disable-gpu", "no-sandbox"],
				"firefox": ["--headless"]
			}
		},
		"istanbul": {
			"dir": "./coverage",
			"reporters": ["text-summary", "lcov"],
			"include": [
				"**/cosmoz-*.js"
			],
			"exclude": []
		},
		"sauce": {
			"browsers": [{
				"browserName": "chrome",
				"platform": "Windows 10",
				"version": "latest",
				"timeZone": "Stockholm"
			}, {
				"browserName": "firefox",
				"platform": "Windows 10",
				"version": "latest-1",
				"timeZone": "Stockholm"
			}, {
				"browserName": "safari",
				"platform": "macOS 10.13",
				"version": "11.1",
				"timeZone": "Stockholm"
			}, {
				"browserName": "safari",
				"platform": "macOS 10.13",
				"version": "12",
				"timeZone": "Stockholm"
			}]
		}
	}
}
